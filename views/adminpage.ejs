<%- include("./header") -%>

    
                <!--/.Row-->
                <div class="row">

                    <div class="col-md-12 mt-3">

                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th>id</th>

                                        <th>patient_id</th>
                                        <th>patient_id</th>
                                        <th>patient_name</th>
                                        <th>patient_age</th>
                                        <th>patient_mobile</th>
                                        <th>patient_disease</th>
                                        <th>patient_address</th>

                                        <th>edit</th>
                                        <th>delete</th>
                                    </tr>
                                </thead>
                                <tbody>

                                     <% allpatients.forEach((data,index)=>{ %>
                                        <tr>
                                            <td><%= index+1 %></td>

                                            <td><%= data._id %></td>
                                            <td><%= data.patient_id %></td>
                                            <td><%= data.patient_name %></td>
                                            <td><%= data.patient_age %></td>
                                            <td><%= data.patient_mobileNo %></td>
                                            <td><%= data.patient_disease %></td>
                                            <td><%= data.patient_address %></td>

                                            <td><a class="btn btn-success"  href="/editpatient/<%= data._id %>">edit</a></td>
                                            <td><a class="btn btn-danger"  href="/deletepatient/<%= data._id %>">delete</a></td>
                                        </tr>
                                     <% }) %>
    
                               
                                </tbody>
                            </table>
                        </div>

                    </div>
    

                </div>
                <!--/.Row-->
    
        <!-- jQuery first, then Popper.js, then Bootstrap JS -->
        <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
      </body>
    </html>


</body>
</html>
